{
  "functions": {
    "runtime": "nodejs14",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "predeploy": [
      "npm run build:firebase:hosting"
    ],
    "public": "build/default",
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*"
    ]
  }
}
